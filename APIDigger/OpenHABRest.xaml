<Window x:Class="APIDigger.OpenHABRest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APIDigger"
        mc:Ignorable="d" 
        Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        Closed="Window_Closed"
        Icon="Icon/ApiDigger.ico">
    <Grid>
        <DataGrid x:Name="dgSensors" 
                  Margin="10,38,10,65"
                  ItemsSource="{Binding}" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Link" Click="MenuItem_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" IsReadOnly="True" Width="*" Binding="{Binding Name}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Label" IsReadOnly="True" Width="200" Binding="{Binding Label}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="State" IsReadOnly="True" Width="200" Binding="{Binding State}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Last Update" IsReadOnly="True" Width="150" Binding="{Binding UpdateTime}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="userSql" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passSql" KeyDown="PassSql_KeyDown" HorizontalAlignment="Left" Height="23" Margin="140,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSqlLogin" Content="Log In" HorizontalAlignment="Left" Margin="270,10,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="BtnLogInSql_Click"/>
        <TextBox x:Name="tbUpdateSpeed" Height="23" Margin="0,10,90,0" TextWrapping="Wrap" VerticalAlignment="Top" PreviewTextInput="TbUpdateSpeed_PreviewTextInput" HorizontalAlignment="Right" Width="120"/>
        <Button x:Name="btnReloadUpd" Content="Apply" Margin="0,10,10,0" VerticalAlignment="Top" Height="23" Click="BtnReloadUpd_Click" HorizontalAlignment="Right" Width="75"/>
        <StatusBar x:Name="statusBar" Height="25" VerticalAlignment="Bottom">
            <StatusBarItem x:Name="statSqlConItem" Background="Red" VerticalAlignment="Center" Margin="10, 0, 0, 0">
                <TextBlock x:Name="statSqlCon" TextAlignment="Center"
                           FontWeight="Bold" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem x:Name="statApiConItem" Background="Red" VerticalAlignment="Center" 
                           HorizontalAlignment="Right" Margin="0, 0, 10, 0" HorizontalContentAlignment="Right">
                <TextBlock x:Name="statApiCon" TextAlignment="Center"
                           FontWeight="Bold" />
            </StatusBarItem>
        </StatusBar>
        <Button x:Name="btnSqlLogout" Content="Log Out" HorizontalAlignment="Left" Margin="350,10,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="BtnSqlLogout_Click"/>
        <CheckBox x:Name="chkRemember" Content="Remember" HorizontalAlignment="Left" Margin="430,15,0,0" VerticalAlignment="Top" Checked="ChkRemember_Checked" Unchecked="ChkRemember_Unchecked"/>
    </Grid>
</Window>
